{% extends '::base.html.twig' %}

{% block title %} Products in Category {{ category.title }} {% endblock %}

{% block body %}

    <h1>Category {{ category.title }}</h1>

    {% for item in products %}
        <p>
            <span class="product-list">
                <a href="{{ path('show_product', {'product': item.id}) }}">
                    {{ item.title }}
                </a>
            </span>
            <span style="padding-left: 50px  " class="product-list-actions">
                <a href="{{ path('show_product', {'product': item.id}) }}">Detail</a>
                {% if is_granted('edit') %}
                    <a href="{{ path('update_product', {'product': item.id}) }}">Edit</a>
                {% endif %}
                {% if is_granted('delete') %}
                    <a href="{{ path('delete_product', { 'product': item.id }) }}">Delete</a>
                {% endif %}
            </span>
        </p>
    {% endfor %}



{% endblock %}